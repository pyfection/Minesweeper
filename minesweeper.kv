FloatLayout:
    ScrollView:
        Grid:
            id: grid

    OptionsBar:
        size_hint: None, None
        size: dp(150), dp(50)
        pos_hint: {'center_x': 0.5}
        y: dp(10)
        options: [{'name': 'uncover', 'source': 'img/bomb.png'}, {'name': 'flag', 'source': 'img/flag.png'}]
        on_current: grid.mode = self.current
